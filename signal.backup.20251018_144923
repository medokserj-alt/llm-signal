#!/usr/bin/env bash
set -euo pipefail

cd "$(dirname "$0")"
mkdir -p logs

ts=$(date -u +%Y%m%d_%H%M%S)
run_log="logs/signal_${ts}.log"

# Запускаем анализ
python3 get_signal_json.py "$@" 2>&1 | tee "$run_log" | tee -a logs/last_signal.log | \
awk 'BEGIN{f=0} /^\{/{f=1} f{print} /^\}/{if(f){f=0; print ""}}' > logs/last.json

echo "----------------------------------------"
echo "✅ Saved logs: $run_log"
echo "✅ Last JSON:  logs/last.json"
